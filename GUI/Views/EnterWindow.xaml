<Window x:Name="windowEnterWindow" x:Class="BelarusChess.UI.Views.EnterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BelarusChess.UI.Views" xmlns:viewmodels="clr-namespace:BelarusChess.UI.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:EnterWindowViewModel}"
        mc:Ignorable="d"
        Title="Білоруські шахи" Height="415" Width="505" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="../Resources/BelarusChess.png">
    <Window.Background>
        <ImageBrush ImageSource="../Resources/Chess image.png" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid Width="495" Height="384">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.63">
                <GradientStop Color="#FF747474" Offset="1"/>
                <GradientStop Color="White"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="buttonStart1PCGame" Content="Грати за 1 комп'ютером" Height="55" Margin="110,125,109,0" VerticalAlignment="Top" FontSize="20" HorizontalAlignment="Center" Width="276" Command="{Binding Start1PCGameCommand, Mode=OneWay}" CommandParameter="{Binding ElementName=windowEnterWindow, Mode=OneWay}"/>
        <Button x:Name="buttonHelp" Content="Як грати" HorizontalAlignment="Center" Height="55" Margin="110,275,109,0" VerticalAlignment="Top" Width="276" FontSize="20" Command="{Binding HelpCommand, Mode=OneWay}"/>
        <Button x:Name="buttonStartLocalNetworkGame" Content="Грати в локальній мережі" Height="55" Margin="110,200,109,0" VerticalAlignment="Top" FontSize="20" HorizontalAlignment="Center" Width="276" Command="{Binding StartLocalNetworkGameCommand, Mode=OneWay}" CommandParameter="{Binding ElementName=windowEnterWindow, Mode=OneWay}"/>
        <Label Content="Білоруські шахи" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" FontFamily="Monotype Corsiva" FontSize="48" FontWeight="Bold"/>

    </Grid>
</Window>
